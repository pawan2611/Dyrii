<%- include('partials/header.ejs') %>
  <div class="container">
    <h1 class="page-title">HOME</h1>
    <p>
      <%= startingContent %>
    </p>
    <div class="all-posts">
      <% content.forEach(eachPost=> { %>
        <div class="each-post" onclick="window.location.href='posts/<%= eachPost.title %>'">
          <h3>
            <%= eachPost.title %>
          </h3>
          <p>
            <%= eachPost.content.slice(0,100) %>... <a href="/posts/<%= eachPost.title %>" id="readMore">Read More</a>
          </p>
        </div>
        <% }) %>
    </div>
  </div>
  <div id="compose-div" onclick="window.location.href='/compose'">
    <button class="compose btn btn-primary"><img src="image/plus.svg" alt="Compose"></button>
  </div>
  <div class="footer-padding">
    <div class="footer">
      <p>
        Made with ❤️ by
        <a id="link-to-portfolio" target="_blank" href="https://pawan2611.github.io/Pawan-Kumar/">@Pawan Kumar</a>
      </p>
    </div>
  </div>
  <script src="js/script.js" type="text/js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  </body>

  </html>